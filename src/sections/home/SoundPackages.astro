---
import SectionLayout from "../../layouts/SectionLayout.astro";

const packages = [
  {
    name: "Single PA",
    image: "/emojis/finger-one.png",
    price: "9999",
    features: [],
  },
  {
    name: "Double PA",
    image: "/emojis/finger-two.png",
    price: "14999",
    features: [],
  },
];
---

<SectionLayout title="Sound Packages" id="packages" classes="bg-neutral-200">
  <div class="grid sm:grid-cols-2 gap-8 max-w-2xl mx-auto mt-8">
    {
      packages.map((p, index) => (
        <div class="col-span-1">
          <div class="flex sm:flex-col items-center sm:justify-center bg-white rounded-lg  mx-auto p-5  gap-4 shadow-lg">
            <img src={p.image} alt={p.name} class="h-16 md:h-20" />
            <div class="flex flex-col items-start sm:items-center">
              <h3 class="text-center text-3xl font-bold">{p.name}</h3>
              <div>
                <span>&#8377;</span>
                <span class="text-xl font-bold">{p.price}</span>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>

  <p class="text-center mt-12">
    <a
      href="#contact"
      class="bg-blue-200 rounded inline-flex items-center gap-2 p-2 mr-2 hover:bg-blue-300 transition-colors duration-300"
    >
      <i class="fas fa-phone"></i>
      <span class="font-bold">Contact Us</span>
    </a>
    for more details.
  </p>
</SectionLayout>

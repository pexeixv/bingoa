---
import SectionLayout from "../../layouts/SectionLayout.astro";

const contacts = [
  {
    name: "Phone",
    text: "+91 8888119982",
    link: "tel:+918888119982",
    fa: "fas fa-phone",
  },
  {
    name: "Instagram",
    text: "/bingoaevents",
    link: "//instagr.am/bingoaevents",
    fa: "fab fa-instagram",
  },
  {
    name: "Facebook",
    text: "/bingoaevents",
    link: "//fb.com/bingoaevents",
    fa: "fab fa-facebook",
  },
  {
    name: "Location",
    text: "Shop No 7, Marshall Church Square, Bin Ward, Betalbatim Goa",
    link: "//goo.gl/maps/Bm4MDHvMh2vDgaqLA",
    fa: "fas fa-location-dot",
  },
];
---

<SectionLayout title="Contact Us" id="contact" classes="bg-neutral-200">
  <div class="flex flex-col sm:flex-row max-w-5xl mx-auto gap-8 mt-8 pb-12">
    <div class="flex-1">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3848.3928155938424!2d73.92113859999999!3d15.300873099999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bbfb7882e9bbc81%3A0x58d70297686ca44f!2sBinGoa%20Events!5e0!3m2!1sen!2sin!4v1661679635347!5m2!1sen!2sin"
        class="border-0 w-full h-[300px] rounded-lg"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <div class="flex flex-col items-start gap-4 w-fit mx-auto sm:mx-0">
      {
        contacts.map((contact) => (
          <div class="flex flex-col">
            <a
              class="flex items-start relative left-0 hover:left-3 transition-all duration-300"
              href={contact.link}
            >
              <i class={contact.fa} />
              <span class="ml-2 max-w-[25ch]  relative bottom-1">
                {contact.text}
              </span>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</SectionLayout>

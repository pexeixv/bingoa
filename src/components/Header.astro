---
const navLinks = ["Home", "Gallery", "Packages", "Rental"];
---

<header class="bg-white text-black shadow">
  <div class="container mx-auto px-5 py-5 flex items-center justify-between">
    <div>
      <img src="/wordmark.png" alt="BinGoa Events" class="h-12" />
    </div>
    <nav class="items-center gap-3 text-bold hidden lg:flex">
      {
        navLinks.map((a) => (
          <a
            href={a === "Home" ? "#" : `#${a.toLowerCase()}`}
            class="font-bold text-black hover:text-gray-600 transition-colors duration-300"
          >
            {a}
          </a>
        ))
      }
      <a
        href="#contact"
        class="bg-blue-200 rounded inline-flex items-center gap-2 p-2 mr-2 hover:bg-blue-300 transition-colors duration-300"
      >
        <i class="fas fa-phone"></i>
        <span class="font-bold">Contact Us</span>
      </a>
    </nav>
  </div>
</header>
